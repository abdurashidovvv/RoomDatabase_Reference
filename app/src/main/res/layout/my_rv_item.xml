<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"    android:padding="10dp">    <TextView        android:id="@+id/summa"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:textSize="20sp"        android:textColor="@color/black"        android:text="@string/app_name"        />    <TextView        android:id="@+id/from_card"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="@string/app_name"        android:textSize="20sp"        android:textColor="@color/black"        />    <TextView        android:id="@+id/to_card"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="@string/app_name"        android:textSize="20sp"        android:textColor="@color/black"        />    <TextView        android:id="@+id/date"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="@string/app_name"        android:textSize="20sp"        android:textColor="@color/black"        /></LinearLayout>